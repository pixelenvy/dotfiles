[user]
  name = Nick Harris
  email = nicholas.harris@cdl.co.uk

[core]
  excludesfile = /Users/nick/.gitignore
  editor = sublime -n -w
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[diff]
  tool = Kaleidoscope
[difftool]
  prompt = false
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = Kaleidoscope
[mergetool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true

[push]
  default = simple

[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --name-status
  slg = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit
  cma = commit -am
  pish = push
  co = checkout
  b = branch
  tempignore = update-index --assume-unchanged
  untempignore = update-index --no-assume-unchanged

[transfer]
        fsckobjects = true

[fetch]
        fsckobjects = true

[receive]
        fsckObjects = true

[color]
        ui = auto

[color "branch"]
        current = green reverse
        local = green
        remote = red

[color "diff"]
        meta = yellow
        frag = magenta
        old = red
        new = green
        whitespace = red reverse

[color "status"]
        added = green
        changed = red
        untracked = cyan
[credential]
  helper = cache --timeout=3600
[pull]
	rebase = true
